<apex:page controller="ContaPDFController" applyHtmlTag="false" showHeader="false" renderAs="PDF">
        <html>
        <head>
            <style>
                * {
                box-sizing: border-box;
                }
                
                .heading {
                font-weight: bold;
                }
                
                .heading--main {
                font-size: 36px;
                }
                
                .heading--sub {
                font-size: 21px;
                }
                
                .box--half {
                float: left;
                width: 50%;
                }
                
                .box--full {
                float: left;
                width: 100%;
                }
               
                th {
                background-color: #B8C0BC;
                font-align: left;
